{
  "tests": [
    {
      "name": "range literal join filter left value",
      "template": "{{ (1..3) | join: '#' }}",
      "result": "1#2#3",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "joining a string is a noop",
      "template": "{{ 'a,b' | join: '#' }}",
      "result": "a,b",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "joining an int is a noop",
      "template": "{{ 123 | join: '#' }}",
      "result": "123",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "join an array of strings",
      "template": "{{ arr | join: '#' }}",
      "data": {
        "arr": [
          "a",
          "b"
        ]
      },
      "result": "a#b",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "join an array of integers",
      "template": "{{ arr | join: '#' }}",
      "data": {
        "arr": [
          1,
          2
        ]
      },
      "result": "1#2",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "missing argument defaults to a space",
      "template": "{{ arr | join }}",
      "data": {
        "arr": [
          "a",
          "b"
        ]
      },
      "result": "a b",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "argument is not a string",
      "template": "{{ arr | join: 5 }}",
      "data": {
        "arr": [
          "a",
          "b"
        ]
      },
      "result": "a5b",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "left value contains non string",
      "template": "{{ arr | join: '#' }}",
      "data": {
        "arr": [
          "a",
          "b",
          1
        ]
      },
      "result": "a#b#1",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "undefined left value",
      "template": "{{ nosuchthing | join: '#' }}",
      "result": "",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "undefined argument",
      "template": "{{ arr | join: nosuchthing }}",
      "data": {
        "arr": [
          "a",
          "b"
        ]
      },
      "result": "ab",
      "tags": [
        "join filter"
      ]
    },
    {
      "name": "too many arguments",
      "template": "{{ arr | join: '#', 42 }}",
      "data": {
        "arr": [
          "a",
          "b"
        ]
      },
      "invalid": true
    }
  ]
}