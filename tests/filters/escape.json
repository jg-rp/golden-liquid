{
  "tests": [
    {
      "name": "make HTML-safe",
      "template": "{{ \"<p>test</p>\" | escape }}",
      "result": "&lt;p&gt;test&lt;/p&gt;",
      "tags": [
        "escape filter"
      ]
    },
    {
      "name": "not a string",
      "template": "{{ 5 | escape }}",
      "result": "5",
      "tags": [
        "escape filter"
      ]
    },
    {
      "name": "unexpected argument",
      "template": "{{ \"HELLO\" | escape: 5 }}",
      "invalid": true
    },
    {
      "name": "undefined left value",
      "template": "{{ nosuchthing | escape }}",
      "result": "",
      "tags": [
        "escape filter"
      ]
    }
  ]
}